<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <core:InvisibleText 
        id="idSegmentButton"
        text="This is a segment Button, it contains 3 Tabs, the first one is Map, the second one is Stellite and the third one is Hybrid"
    />
    <core:InvisibleText 
        id="idSegmentButtonItem1"
        text="Tab Map"
    />
    <core:InvisibleText 
        id="idSegmentButtonItem2"
        text="Tab Stellite"
    />
    <core:InvisibleText 
        id="idSegmentButtonItem3"
        text="Tab Hybrid"
    />
    <SegmentedButton
        id="idExercise10SegmentedButton"
        ariaLabelledBy="idSegmentButton"
    >
        <items>
            <SegmentedButtonItem
                id="idMapExercise10SegmentedButtonItem"
                text="{i18n>Exercise10.fragment.segmentedButton.map}"
                width="100px"
            />
            <SegmentedButtonItem
                id="idSatelliteExercise10SegmentedButtonItem"
                text="{i18n>Exercise10.fragment.segmentedButton.satellite}"
                width="100px"
            />
            <SegmentedButtonItem
                id="idHybridExercise10SegmentedButtonItem"
                text="{i18n>Exercise10.fragment.segmentedButton.hybrid}"
                width="100px"
            />
        </items>
    </SegmentedButton>
</core:FragmentDefinition>
