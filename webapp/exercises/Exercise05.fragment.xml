<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <form:SimpleForm
        id="idExercise05SimpleForm"
        editable="true"
    >
        <Label
            id="idPostalCodeCityExercise05Label"
            text="{i18n>Exercise05.fragment.form.label}"
        />
        <Input
            id="idExercise05PostalCodeInput"
            ariaLabelledBy="idPostalCode"
            value="75000"
        />
        <Input
            id="idExercise05CityInput"
            ariaLabelledBy="idRegion"
            value="Paris"
        />
    </form:SimpleForm>
    <core:InvisibleText 
        id="idPostalCode"
        text="Postal Code"
    />
        <core:InvisibleText 
        id="idRegion"
        text="Region"
    />
</core:FragmentDefinition>